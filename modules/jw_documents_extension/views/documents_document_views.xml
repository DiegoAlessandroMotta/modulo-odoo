<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario extendida para documents.document -->
    <record id="view_documents_document_form" model="ir.ui.view">
        <field name="name">documents.document.form (extended)</field>
        <field name="model">documents.document</field>
        <field name="inherit_id">documents.view_document_form</field>
        <field name="arch" type="xml">
            <!-- Agregar grupo de campos adicionales antes de la etiqueta de cierre -->
            <xpath expr="//form//sheet" position="inside">
                <group name="jw_extension" string="Información Adicional">
                    <field name="tipo_documento" />
                    <field name="ubicacion_fisica" />
                    <field name="responsable_custodia" />
                </group>
            </xpath>
        </field>
    </record>

    <!-- Vista de lista extendida para documents.document -->
    <record id="view_documents_document_tree" model="ir.ui.view">
        <field name="name">documents.document.tree (extended)</field>
        <field name="model">documents.document</field>
        <field name="inherit_id">documents.view_document_tree</field>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="tipo_documento" />
                <field name="ubicacion_fisica" />
                <field name="responsable_custodia" />
            </xpath>
        </record>
    </record>

    <!-- Vista de búsqueda extendida para documents.document -->
    <record id="view_documents_document_search" model="ir.ui.view">
        <field name="name">documents.document.search (extended)</field>
        <field name="model">documents.document</field>
        <field name="inherit_id">documents.view_document_search</field>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <separator />
                <filter name="filter_tipo_administrativo" string="Administrativos"
                    domain="[('tipo_documento', '=', 'administrativo')]" />
                <filter name="filter_tipo_estudiantil" string="Estudiantiles"
                    domain="[('tipo_documento', '=', 'estudiantil')]" />
                <filter name="filter_tipo_oficial" string="Oficiales"
                    domain="[('tipo_documento', '=', 'oficial')]" />
                <separator />
                <field name="responsable_custodia" />
            </xpath>
        </field>
    </record>
</odoo>
